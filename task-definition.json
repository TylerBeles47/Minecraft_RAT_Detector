{
  "family": "minecraft-rat-detector",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "1024",
  "memory": "2048",
  "executionRoleArn": "arn:aws:iam::104976232296:role/Minecraft-rat",
  "taskRoleArn": "arn:aws:iam::104976232296:role/Minecraft-rat",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "104976232296.dkr.ecr.us-east-2.amazonaws.com/minecraft-rat-detector-app:latest",
      "essential": true,
      "secrets": [
        {"name": "DATABASE_URL", "valueFrom": "arn:aws:secretsmanager:us-east-2:104976232296:secret:minecraft-rat-detector/database-v2:DATABASE_URL::"}
      ],
      "environment": [
        {"name": "MODEL_S3_BUCKET", "value": "minecraft-rat-bucket"}
      ],
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/minecraft-rat-detector",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "app"
        }
      }
    }
  ]
}